html {
	background: transparent url(/images/background.jpg) center top ; 
}

/* Body and html */
body  {
	font-size: 100%;
/*	background: transparent url(/images/background.jpg) center bottom no-repeat; */
	margin: 0; /* it's good practice to zero the margin and padding of the body element to account for differing browser defaults */
	padding: 0;
	text-align: center; /* this centers the container in IE 5* browsers. The text is then set to the left aligned default in the #container selector */
}

@font-face {
	font-family: Champagne;
	src: url('ColabThi.otf'); 
}

@font-face {
	font-family: Champagne;
	font-weight: bold;
	src: url('ColabThi.otf');
}

/* text style */
h2 {
	color: #fff;
	font-size:30px;	
	font-family: Champagne, sans-serif;
	padding:0;
	line-height:20px;
	letter-spacing:2px;	
	word-spacing:1px;
	padding-top:5px;	
	padding-bottom:10px;
}

/* text style */
h3 {
	color: #fff;
	font-size:19px;	
	font-family: Champagne, sans-serif;
	padding:0;
	line-height:20px;
	letter-spacing:2px;	
	word-spacing:1px;
	padding-top:5px;	
	padding-bottom:10px;
}


p {
	color: #fff;
	font-size:20px;
	font-family: Champagne, sans-serif;
	padding:0;
	line-height:20px;
	letter-spacing:2px;	
	word-spacing:1px;			
}

label {
	color: #fff;
	font-size:15px;
	font-family: Champagne, sans-serif;
	padding:0;
	line-height:16px;
	letter-spacing:2px;	
	word-spacing:1px;
}


a:link {text-decoration: none; color: #cc66cc;}
a:visited {text-decoration: none; color: #cc66cc;}
a:active {text-decoration: none; color: #cc66cc; }
a:hover {text-decoration: underline; color: #fff;}

/* CONTENT WRAPPER */
#content_wrapper {
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	background: rgba(10, 10, 10, 0.9); 	
}

/* FOOTER LINKS */
#footer_links{
		color: #fff;
		font-size:14px;
		font-family: "Helvetica", Times New Roman, Times, serif;	
		margin-top:5px;
		padding:0;
		text-align:center;
		line-height:16px;			
}

/* HEADER GRAPHIC */
.header{
	min-height:120px;
	background: transparent url(/images/logo.jpg) 0px 10px no-repeat;	
}

/* PHOTOS ON HOMEPAGE */
.photo_first {
  float:left;
  width:160px;
	height:200px;
	overflow:hidden;
	margin:6px; 
}

.photo {
  float:left;
  width:160px;
	height:160px;
	overflow:hidden;
	margin:6px; 	
}

.img_border{
	border-top:4px solid #333;
	border-right:4px solid #333;
	border-bottom:4px solid #333;
	border-left:4px solid #333;			
}

